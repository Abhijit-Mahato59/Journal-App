@page "/write"
@inject JournalService JournalService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Write Entry - Journal App</PageTitle>

<div class="write-entry-page">
    <h1>@(isEditing ? "Edit Today's Entry" : "Write Today's Entry")</h1>
    <p class="date-display">@DateTime.Today.ToString("dddd, MMMM dd, yyyy")</p>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-message">@errorMessage</div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="success-message">@successMessage</div>
    }

    @if (hasBeenEdited)
    {
        <div class="warning-message">
            ⚠️ This entry has already been edited once and cannot be modified again.
        </div>
    }

    @if (cannotCreateToday)
    {
        <div class="warning-message">
            ⚠️ You have already deleted an entry today. You cannot create another entry on the same day.
        </div>
    }

    <div class="entry-form">
        <div class="form-group">
            <label>Title</label>
            <input type="text" @bind="title" placeholder="Give your entry a title..." maxlength="200" disabled="@hasBeenEdited" />
        </div>

        <div class="form-group">
            <label>Primary Mood (Required)</label>
            <select @bind="primaryMood" disabled="@hasBeenEdited">
                <option value="">-- Select Mood --</option>
                @foreach (var mood in MoodCategories.GetAllMoods())
                {
                    <option value="@mood">@mood</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Secondary Moods (Optional)</label>
            <div style="display: flex; gap: 10px;">
                <select @bind="secondaryMood1" style="flex: 1;" disabled="@hasBeenEdited">
                    <option value="">-- None --</option>
                    @foreach (var mood in MoodCategories.GetAllMoods())
                    {
                        <option value="@mood">@mood</option>
                    }
                </select>
                <select @bind="secondaryMood2" style="flex: 1;" disabled="@hasBeenEdited">
                    <option value="">-- None --</option>
                    @foreach (var mood in MoodCategories.GetAllMoods())
                    {
                        <option value="@mood">@mood</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label>Category (Optional)</label>
            <input type="text" @bind="category" placeholder="e.g., Personal, Work, Travel..." disabled="@hasBeenEdited" />
        </div>

        <div class="form-group">
            <label>Tags (Optional, comma-separated)</label>
            <input type="text" @bind="tags" placeholder="e.g., work, family, health..." disabled="@hasBeenEdited" />
            <div class="predefined-tags mt-1">
                <small>Quick add:</small>
                @foreach (var tag in PredefinedTags.Tags)
                {
                    <button type="button" class="tag" @onclick="() => AddTag(tag)" disabled="@hasBeenEdited">@tag</button>
                }
            </div>
        </div>

        <div class="form-group">
            <label>Content (Markdown supported)</label>
            @if (!hasBeenEdited)
            {
                <div class="markdown-toolbar">
                    <button type="button" class="toolbar-btn" @onclick="InsertBold" title="Bold">
                        <strong>B</strong>
                    </button>
                    <button type="button" class="toolbar-btn" @onclick="InsertItalic" title="Italic">
                        <em>I</em>
                    </button>
                    <button type="button" class="toolbar-btn" @onclick="InsertHeading1" title="Heading">
                        H1
                    </button>
                    <button type="button" class="toolbar-btn" @onclick="InsertHeading2" title="Heading 2">
                        H2
                    </button>
                    <button type="button" class="toolbar-btn" @onclick="InsertList" title="Bullet List">
                        • List
                    </button>
                    <button type="button" class="toolbar-btn" @onclick="InsertLink" title="Link">
                        🔗 Link
                    </button>
                </div>
            }
            <textarea @bind="content" placeholder="Write your thoughts here..." rows="15" disabled="@hasBeenEdited"></textarea>
            <small>Word count: @GetWordCount()</small>
        </div>

        <div class="form-actions">
            <button class="btn btn-primary" @onclick="SaveEntry" disabled="@(isSaving || hasBeenEdited || cannotCreateToday)">
                @(isSaving ? "Saving..." : isEditing ? "Update Entry" : "Save Entry")
            </button>

            @if (isEditing && existingEntryId.HasValue)
            {
                <button class="btn btn-danger" @onclick="ShowDeleteConfirm" disabled="@isSaving">
                    Delete Entry
                </button>
            }

            <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
        </div>
    </div>
</div>

@if (showUpdateConfirm)
{
    <div class="modal-overlay" @onclick="CloseUpdateConfirm">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h2>Update Entry</h2>
            <p>Are you sure you want to update this entry? This action cannot be undone.</p>
            <div class="modal-actions">
                <button class="btn btn-primary" @onclick="ConfirmUpdate">Update Entry</button>
                <button class="btn btn-secondary" @onclick="CloseUpdateConfirm">Cancel</button>
            </div>
        </div>
    </div>
}

@if (showDeleteConfirm)
{
    <div class="modal-overlay" @onclick="CloseDeleteConfirm">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h2>Delete Entry</h2>
            <p>Are you sure you want to delete this entry? This action cannot be undone.</p>
            <div class="modal-actions">
                <button class="btn btn-danger" @onclick="ConfirmDelete">Delete Entry</button>
                <button class="btn btn-secondary" @onclick="CloseDeleteConfirm">Cancel</button>
            </div>
        </div>
    </div>
}

@code {
    private string title = string.Empty;
    private string content = string.Empty;
    private string primaryMood = string.Empty;
    private string? secondaryMood1;
    private string? secondaryMood2;
    private string? category;
    private string? tags;

    private bool isEditing = false;
    private int? existingEntryId;
    private bool isSaving = false;
    private string? errorMessage;
    private string? successMessage;
    private bool hasBeenEdited = false;
    private bool cannotCreateToday = false;
    private bool showUpdateConfirm = false;
    private bool showDeleteConfirm = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTodaysEntry();
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadTodaysEntry();
    }

    private async Task LoadTodaysEntry()
    {
        try
        {
            // Check if an entry was deleted today
            var hasDeleted = await JournalService.HasDeletedEntryForDateAsync(DateTime.Today);
            if (hasDeleted)
            {
                cannotCreateToday = true;
                return;
            }

            var entry = await JournalService.GetEntryByDateAsync(DateTime.Today);
            if (entry != null)
            {
                isEditing = true;
                existingEntryId = entry.Id;
                hasBeenEdited = entry.HasBeenEdited;
                title = entry.Title;
                content = entry.Content;
                primaryMood = entry.PrimaryMood;
                secondaryMood1 = entry.SecondaryMood1;
                secondaryMood2 = entry.SecondaryMood2;
                category = entry.Category;
                tags = entry.Tags;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading entry: {ex.Message}";
        }
    }

    private async Task SaveEntry()
    {
        errorMessage = null;
        successMessage = null;

        if (string.IsNullOrWhiteSpace(title))
        {
            errorMessage = "Title is required.";
            return;
        }

        if (string.IsNullOrWhiteSpace(content))
        {
            errorMessage = "Content is required.";
            return;
        }

        if (string.IsNullOrWhiteSpace(primaryMood))
        {
            errorMessage = "Primary mood is required.";
            return;
        }

        // Show custom confirmation modal for editing
        if (isEditing && existingEntryId.HasValue)
        {
            showUpdateConfirm = true;
            return;
        }

        await PerformSave();
    }

    private async Task ConfirmUpdate()
    {
        showUpdateConfirm = false;
        await PerformSave();
    }

    private void CloseUpdateConfirm()
    {
        showUpdateConfirm = false;
    }

    private async Task PerformSave()
    {
        isSaving = true;

        try
        {
            if (isEditing && existingEntryId.HasValue)
            {
                var entry = new JournalEntry
                {
                    Id = existingEntryId.Value,
                    Date = DateTime.Today,
                    Title = title.Trim(),
                    Content = content,
                    PrimaryMood = primaryMood,
                    SecondaryMood1 = secondaryMood1,
                    SecondaryMood2 = secondaryMood2,
                    Category = category?.Trim(),
                    Tags = tags?.Trim()
                };
                await JournalService.UpdateEntryAsync(entry);
                Navigation.NavigateTo("/");
            }
            else
            {
                var entry = new JournalEntry
                {
                    Date = DateTime.Today,
                    Title = title.Trim(),
                    Content = content,
                    PrimaryMood = primaryMood,
                    SecondaryMood1 = secondaryMood1,
                    SecondaryMood2 = secondaryMood2,
                    Category = category?.Trim(),
                    Tags = tags?.Trim()
                };
                var created = await JournalService.CreateEntryAsync(entry);
                Navigation.NavigateTo("/");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving entry: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ShowDeleteConfirm()
    {
        if (!existingEntryId.HasValue) return;
        showDeleteConfirm = true;
    }

    private void CloseDeleteConfirm()
    {
        showDeleteConfirm = false;
    }

    private async Task ConfirmDelete()
    {
        showDeleteConfirm = false;
        if (!existingEntryId.HasValue) return;

        try
        {
            await JournalService.DeleteEntryAsync(existingEntryId.Value);
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting entry: {ex.Message}";
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/");
    }

    private void AddTag(string tag)
    {
        if (string.IsNullOrWhiteSpace(tags))
            tags = tag;
        else if (!tags.Contains(tag))
            tags += $", {tag}";
    }

    private void InsertBold()
    {
        content += "**text**";
    }

    private void InsertItalic()
    {
        content += "_text_";
    }

    private void InsertHeading1()
    {
        content += "# Heading";
    }

    private void InsertHeading2()
    {
        content += "## Heading";
    }

    private void InsertList()
    {
        content += "- List item";
    }

    private void InsertLink()
    {
        content += "[text](url)";
    }

    private int GetWordCount()
    {
        if (string.IsNullOrWhiteSpace(content))
            return 0;

        return content.Split(new[] { ' ', '\n', '\r', '\t' }, StringSplitOptions.RemoveEmptyEntries).Length;
    }
}

