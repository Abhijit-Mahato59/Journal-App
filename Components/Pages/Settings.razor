@page "/settings"
@inject IJSRuntime JSRuntime
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Settings - Journal App</PageTitle>

<div class="settings-page">
    <h1>Settings</h1>
    <p class="subtitle">Customize your journal experience</p>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="success-message">@successMessage</div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-message">@errorMessage</div>
    }

    <!-- Password Protection Section -->
    <div class="settings-section">
        <h2>Password Protection</h2>
        <p class="section-description">Protect your journal with a password</p>

        <div class="setting-card">
            <div class="setting-info">
                <h3>Password Protection</h3>
                <p>@(isPasswordSet ? "Your journal is currently password protected" : "No password set")</p>
            </div>
            <div class="setting-action">
                @if (isPasswordSet)
                {
                    <button class="btn btn-secondary" @onclick="ShowChangePasswordDialog">Change Password</button>
                    <button class="btn btn-danger" @onclick="ShowRemovePasswordDialog">Remove Password</button>
                }
                else
                {
                    <button class="btn btn-primary" @onclick="ShowSetPasswordDialog">Set Password</button>
                }
            </div>
        </div>

        @if (isPasswordSet)
        {
            <div class="setting-card">
                <div class="setting-info">
                    <h3>Logout</h3>
                    <p>Log out of your journal to lock it</p>
                </div>
                <div class="setting-action">
                    <button class="btn btn-secondary" @onclick="HandleLogout">Logout</button>
                </div>
            </div>
        }
    </div>

    <!-- Theme Settings Section -->
    <div class="settings-section">
        <h2>Theme Settings</h2>
        <p class="section-description">Choose your preferred theme</p>

        <div class="setting-card">
            <div class="setting-info">
                <h3>Theme Mode</h3>
                <p>Select light or dark theme</p>
            </div>
            <div class="setting-action">
                <select @bind="selectedTheme" @bind:after="ChangeTheme" class="theme-select">
                    <option value="light">Light Theme</option>
                    <option value="dark">Dark Theme</option>
                    <option value="auto">Auto (System)</option>
                </select>
            </div>
        </div>
    </div>

    <!-- App Information Section -->
    <div class="settings-section">
        <h2>App Information</h2>
        <p class="section-description">About this application</p>

        <div class="setting-card">
            <div class="setting-info">
                <h3>Journal App</h3>
                <p>Version 1.0.0</p>
                <p class="app-description">A personal journaling application to track your thoughts, moods, and memories.</p>
            </div>
        </div>
    </div>

    <!-- Password Modals -->
    @if (showPasswordDialog)
    {
        <div class="modal-overlay" @onclick="ClosePasswordDialog">
            <div class="modal-content" @onclick:stopPropagation="true">
                <h2>@passwordDialogTitle</h2>

                @if (passwordDialogMode == "change")
                {
                    <div class="form-group">
                        <label>Current Password</label>
                        <input type="password" @bind="currentPassword" class="form-control" placeholder="Enter current password" />
                    </div>
                }

                <div class="form-group">
                    <label>@(passwordDialogMode == "change" ? "New Password" : "Password")</label>
                    <input type="password" @bind="newPassword" class="form-control" placeholder="Enter password" />
                </div>

                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" @bind="confirmPassword" class="form-control" placeholder="Confirm password" />
                </div>

                <div class="modal-actions">
                    <button class="btn btn-primary" @onclick="HandlePasswordAction">
                        @(passwordDialogMode == "set" ? "Set Password" : "Change Password")
                    </button>
                    <button class="btn btn-secondary" @onclick="ClosePasswordDialog">Cancel</button>
                </div>
            </div>
        </div>
    }

    @if (showRemovePasswordDialog)
    {
        <div class="modal-overlay" @onclick="CloseRemovePasswordDialog">
            <div class="modal-content" @onclick:stopPropagation="true">
                <h2>Remove Password Protection</h2>
                <p>Are you sure you want to remove password protection from your journal?</p>

                <div class="form-group">
                    <label>Current Password</label>
                    <input type="password" @bind="removePasswordInput" class="form-control" placeholder="Enter current password" />
                </div>

                <div class="modal-actions">
                    <button class="btn btn-danger" @onclick="HandleRemovePassword">Remove Password</button>
                    <button class="btn btn-secondary" @onclick="CloseRemovePasswordDialog">Cancel</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private string selectedTheme = "light";
    private string? successMessage;
    private string? errorMessage;

    // Password protection
    private bool isPasswordSet = false;
    private bool showPasswordDialog = false;
    private bool showRemovePasswordDialog = false;
    private string passwordDialogMode = "set"; // "set" or "change"
    private string passwordDialogTitle = "";
    private string currentPassword = string.Empty;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private string removePasswordInput = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
        await CheckPasswordStatus();
    }

    private async Task CheckPasswordStatus()
    {
        try
        {
            isPasswordSet = await AuthService.IsPasswordSetAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error checking password status: {ex.Message}");
        }
    }

    // Password dialog methods
    private void ShowSetPasswordDialog()
    {
        passwordDialogMode = "set";
        passwordDialogTitle = "Set Password";
        showPasswordDialog = true;
        ClearPasswordFields();
    }

    private void ShowChangePasswordDialog()
    {
        passwordDialogMode = "change";
        passwordDialogTitle = "Change Password";
        showPasswordDialog = true;
        ClearPasswordFields();
    }

    private void ShowRemovePasswordDialog()
    {
        showRemovePasswordDialog = true;
        removePasswordInput = string.Empty;
        errorMessage = null;
        successMessage = null;
    }

    private void ClosePasswordDialog()
    {
        showPasswordDialog = false;
        ClearPasswordFields();
    }

    private void CloseRemovePasswordDialog()
    {
        showRemovePasswordDialog = false;
        removePasswordInput = string.Empty;
    }

    private void ClearPasswordFields()
    {
        currentPassword = string.Empty;
        newPassword = string.Empty;
        confirmPassword = string.Empty;
        errorMessage = null;
        successMessage = null;
    }

    private async Task HandlePasswordAction()
    {
        errorMessage = null;
        successMessage = null;

        // Validate passwords
        if (string.IsNullOrWhiteSpace(newPassword))
        {
            errorMessage = "Password cannot be empty";
            return;
        }

        if (newPassword != confirmPassword)
        {
            errorMessage = "Passwords do not match";
            return;
        }

        if (newPassword.Length < 4)
        {
            errorMessage = "Password must be at least 4 characters";
            return;
        }

        try
        {
            if (passwordDialogMode == "set")
            {
                await AuthService.SetPasswordAsync(newPassword);
                successMessage = "Password set successfully";
                isPasswordSet = true;
                ClosePasswordDialog();
            }
            else if (passwordDialogMode == "change")
            {
                if (string.IsNullOrWhiteSpace(currentPassword))
                {
                    errorMessage = "Please enter your current password";
                    return;
                }

                var success = await AuthService.ChangePasswordAsync(currentPassword, newPassword);
                if (success)
                {
                    successMessage = "Password changed successfully";
                    ClosePasswordDialog();
                }
                else
                {
                    errorMessage = "Current password is incorrect";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task HandleRemovePassword()
    {
        errorMessage = null;
        successMessage = null;

        if (string.IsNullOrWhiteSpace(removePasswordInput))
        {
            errorMessage = "Please enter your current password";
            return;
        }

        try
        {
            var isValid = await AuthService.VerifyPasswordAsync(removePasswordInput);
            if (isValid)
            {
                await AuthService.RemovePasswordAsync();
                successMessage = "Password protection removed";
                isPasswordSet = false;
                CloseRemovePasswordDialog();
            }
            else
            {
                errorMessage = "Incorrect password";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task HandleLogout()
    {
        try
        {
            await AuthService.LogoutAsync();
            Navigation.NavigateTo("/login", true);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error logging out: {ex.Message}";
        }
    }

    private async Task LoadSettings()
    {
        try
        {
            // Load theme from localStorage
            var theme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "journal_theme");
            selectedTheme = string.IsNullOrEmpty(theme) ? "light" : theme;

            // Apply current theme
            await ApplyTheme(selectedTheme);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
        }
    }

    private async Task ChangeTheme()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "journal_theme", selectedTheme);
            await ApplyTheme(selectedTheme);
            successMessage = "Theme changed successfully";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error changing theme: {ex.Message}";
        }
    }

    private async Task ApplyTheme(string theme)
    {
        try
        {
            if (theme == "dark")
            {
                await JSRuntime.InvokeVoidAsync("eval", @"
                    document.documentElement.setAttribute('data-theme', 'dark');
                ");
            }
            else if (theme == "light")
            {
                await JSRuntime.InvokeVoidAsync("eval", @"
                    document.documentElement.removeAttribute('data-theme');
                ");
            }
            else // auto
            {
                await JSRuntime.InvokeVoidAsync("eval", @"
                    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                    if (prefersDark) {
                        document.documentElement.setAttribute('data-theme', 'dark');
                    } else {
                        document.documentElement.removeAttribute('data-theme');
                    }
                ");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error applying theme: {ex.Message}");
        }
    }

}

<style>
    .settings-page {
        max-width: 900px;
    }

    h1 {
        font-size: 28px;
        margin-bottom: 5px;
    }

    .subtitle {
        font-size: 16px;
        color: #666;
        margin-bottom: 40px;
    }

    h2 {
        font-size: 22px;
        margin-bottom: 10px;
        color: var(--text-primary);
    }

    .settings-section {
        margin-bottom: 50px;
    }

    .section-description {
        color: var(--text-tertiary);
        font-size: 14px;
        margin-bottom: 20px;
    }

    .setting-card {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        padding: 25px;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
    }

    .setting-info h3 {
        font-size: 18px;
        margin: 0 0 8px 0;
        color: var(--text-primary);
    }

    .setting-info p {
        font-size: 14px;
        color: var(--text-tertiary);
        margin: 4px 0;
    }

    .app-description {
        margin-top: 10px;
    }

    .setting-action {
        display: flex;
        gap: 10px;
        flex-shrink: 0;
    }

    .theme-select {
        padding: 10px 15px;
        border: 1px solid var(--border-color-secondary);
        border-radius: 4px;
        background: var(--input-bg);
        color: var(--text-primary);
        font-size: 14px;
        cursor: pointer;
        min-width: 150px;
    }

        .theme-select option {
            background: var(--input-bg);
            color: var(--text-primary);
        }

    .color-options {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .color-option {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 3px solid transparent;
        cursor: pointer;
        transition: all 0.2s;
    }

        .color-option:hover {
            transform: scale(1.1);
        }

        .color-option.selected {
            border-color: #1a1a1a;
            box-shadow: 0 0 0 2px #ffffff;
        }

    /* Modal */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .modal-content {
        background: var(--card-bg);
        border-radius: 8px;
        padding: 30px;
        max-width: 500px;
        width: 90%;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

        .modal-content h2 {
            margin-top: 0;
            margin-bottom: 20px;
            color: var(--text-primary);
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--text-primary);
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid var(--border-color-secondary);
        border-radius: 4px;
        font-size: 14px;
        background: var(--input-bg);
        color: var(--text-primary);
    }

    .modal-actions {
        display: flex;
        gap: 10px;
        margin-top: 25px;
    }

    /* Messages */
    .success-message {
        background: #d4edda;
        border: 1px solid #c3e6cb;
        border-radius: 8px;
        padding: 15px 20px;
        margin-bottom: 20px;
        color: #155724;
    }

    .error-message {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        padding: 15px 20px;
        margin-bottom: 20px;
        color: #721c24;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .setting-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .setting-action {
            width: 100%;
            flex-direction: column;
        }

        .theme-select {
            width: 100%;
        }
    }
</style>
