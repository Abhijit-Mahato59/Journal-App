@page "/settings"
@inject IJSRuntime JSRuntime

<PageTitle>Settings - Journal App</PageTitle>

<div class="settings-page">
    <h1>Settings</h1>
    <p class="subtitle">Customize your journal experience</p>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="success-message">@successMessage</div>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-message">@errorMessage</div>
    }

    <!-- Theme Settings Section -->
    <div class="settings-section">
        <h2>Theme Settings</h2>
        <p class="section-description">Choose your preferred theme</p>

        <div class="setting-card">
            <div class="setting-info">
                <h3>Theme Mode</h3>
                <p>Select light or dark theme</p>
            </div>
            <div class="setting-action">
                <select @bind="selectedTheme" @bind:after="ChangeTheme" class="theme-select">
                    <option value="light">Light Theme</option>
                    <option value="dark">Dark Theme</option>
                    <option value="auto">Auto (System)</option>
                </select>
            </div>
        </div>
    </div>

    <!-- App Information Section -->
    <div class="settings-section">
        <h2>App Information</h2>
        <p class="section-description">About this application</p>

        <div class="setting-card">
            <div class="setting-info">
                <h3>Journal App</h3>
                <p>Version 1.0.0</p>
                <p class="app-description">A personal journaling application to track your thoughts, moods, and memories.</p>
            </div>
        </div>
    </div>
</div>

@code {
    private string selectedTheme = "light";
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        try
        {
            // Load theme from localStorage
            var theme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "journal_theme");
            selectedTheme = string.IsNullOrEmpty(theme) ? "light" : theme;

            // Apply current theme
            await ApplyTheme(selectedTheme);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading settings: {ex.Message}");
        }
    }

    private async Task ChangeTheme()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "journal_theme", selectedTheme);
            await ApplyTheme(selectedTheme);
            successMessage = "Theme changed successfully";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error changing theme: {ex.Message}";
        }
    }

    private async Task ApplyTheme(string theme)
    {
        try
        {
            if (theme == "dark")
            {
                await JSRuntime.InvokeVoidAsync("eval", @"
                    document.documentElement.setAttribute('data-theme', 'dark');
                ");
            }
            else if (theme == "light")
            {
                await JSRuntime.InvokeVoidAsync("eval", @"
                    document.documentElement.removeAttribute('data-theme');
                ");
            }
            else // auto
            {
                await JSRuntime.InvokeVoidAsync("eval", @"
                    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                    if (prefersDark) {
                        document.documentElement.setAttribute('data-theme', 'dark');
                    } else {
                        document.documentElement.removeAttribute('data-theme');
                    }
                ");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error applying theme: {ex.Message}");
        }
    }

}

