@page "/"
@inject JournalService JournalService

<PageTitle>Home - Journal App</PageTitle>

<div class="home-page">
    <h1>Welcome to Your Journal</h1>
    <p class="subtitle">Track your thoughts, moods, and memories</p>

    @if (isLoading)
    {
        <div class="loading">Loading stats...</div>
    }
    else
    {
        <div class="quick-stats">
            <div class="stat-card">
                <div class="stat-number">@totalEntries</div>
                <div class="stat-label">Total Entries</div>
            </div>

            <div class="stat-card">
                <div class="stat-number">@currentStreak</div>
                <div class="stat-label">Current Streak</div>
            </div>

            <div class="stat-card">
                <div class="stat-number">@longestStreak</div>
                <div class="stat-label">Longest Streak</div>
            </div>
        </div>

        @if (todaysEntry != null)
        {
            <div class="todays-entry-notice">
                <p>✅ You've already written today's entry: <strong>@todaysEntry.Title</strong></p>
                <a href="/write" class="btn btn-secondary">Edit Today's Entry</a>
            </div>
        }
        else if (currentStreak > 0)
        {
            <div class="streak-notice">
                <p>🔥 Keep your streak going! Write today's entry.</p>
            </div>
        }
    }

    <div class="actions mt-3">
        <a href="/write" class="btn btn-primary">@(todaysEntry != null ? "Edit Today's Entry" : "Write Today's Entry")</a>
        <a href="/entries" class="btn btn-secondary">View All Entries</a>
    </div>
</div>

@code {
    private int totalEntries = 0;
    private int currentStreak = 0;
    private int longestStreak = 0;
    private JournalEntry? todaysEntry;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadStats();
    }

    private async Task LoadStats()
    {
        try
        {
            totalEntries = await JournalService.GetTotalEntriesAsync();
            var streakInfo = await JournalService.GetStreakInfoAsync();
            currentStreak = streakInfo.currentStreak;
            longestStreak = streakInfo.longestStreak;
            todaysEntry = await JournalService.GetEntryByDateAsync(DateTime.Today);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}

<style>
    .home-page {
        padding: 40px 0;
    }

    h1 {
        font-size: 32px;
        margin-bottom: 10px;
        color: #1a1a1a;
    }

    .subtitle {
        font-size: 16px;
        color: #666;
        margin-bottom: 40px;
    }

    .quick-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: #fafafa;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 30px;
        text-align: center;
    }

    .stat-number {
        font-size: 48px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 10px;
    }

    .stat-label {
        font-size: 14px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .actions {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .todays-entry-notice {
        background: #d4edda;
        border: 1px solid #c3e6cb;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        text-align: center;
    }

        .todays-entry-notice p {
            color: #155724;
            margin-bottom: 15px;
        }

    .streak-notice {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        text-align: center;
    }

        .streak-notice p {
            color: #856404;
            margin: 0;
        }
</style>