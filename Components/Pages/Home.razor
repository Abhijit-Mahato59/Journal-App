        margin-bottom: 10px;
    }

    .stat-label {
        font-size: 14px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .actions {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .todays-entry-notice {
        background: #d4edda;
        border: 1px solid #c3e6cb;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        text-align: center;
    }

        .todays-entry-notice p {
            color: #155724;
            margin: 0;
        }

        .todays-entry-notice.edited {
            background: #cce5ff;
